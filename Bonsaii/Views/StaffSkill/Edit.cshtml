<script type="text/javascript">
    $(function () {
        $("#StaffNumber").change(function () {
            var tableid = $(this).val();
            //$("#tableName").val(tableid);
            //$.get("./SearchStaff", { staffNumber: tableid }, function (data) {
            //    alert(data);
            //    $("#StaffName").val(data);
            //});
            $.ajax({
