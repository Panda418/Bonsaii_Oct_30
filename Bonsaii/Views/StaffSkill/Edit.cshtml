                type: 'get',
                data: { staffNumber: tableid },
                success: (function (data) {
                    //alert(data[0].text);
                    console.info(data);
                    if (data[0].text != null && "" != data[0].text) {
                        //$("#StaffName").val(data[0].text);//传入的值，无法进行插入操作。
                        $("#StaffName").attr("value", data[0].text);//可以传入真是的值。
                    }
