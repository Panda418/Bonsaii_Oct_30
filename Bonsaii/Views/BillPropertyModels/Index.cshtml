            @Html.DisplayFor(modelItem => item.Type)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TypeName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TypeFullName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CodeMethod)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Code)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsAutoAudit)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsApprove)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsLimitInput)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsAscOrDesc)
        </td>
        <td>
            @Html.ActionLink("编辑", "Edit", new { id=item.Id }) |
